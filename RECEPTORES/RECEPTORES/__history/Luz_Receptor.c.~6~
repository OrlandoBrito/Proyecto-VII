#byte porta=0x05
#byte portb=0x06
INT8 LAMPARA;  //39 = ENCENDER //68 = APAGAR
int8  const ENCENDER=39;
int8  const APAGAR=68;

#INT_EXT
void int_RB0()
{
   int8 ret1;

   ret1 = RF_RECEIVE();
   if ( (ret1 == 0) || (ret1 == 1) )
   {
      do
      {    
         LAMPARA=RF_DATA[0];  // El puerto A contendrá el valor que le llege del emisor, a través de RF_DATA[0].
         ret1 = RF_RECEIVE(); 
      } while ( (ret1 == 0) || (ret1 == 1) );
   }  
}
